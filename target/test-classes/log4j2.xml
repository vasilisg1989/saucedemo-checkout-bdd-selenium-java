<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5p %c{1} - %msg%n"/>
    </Console>

   
    <RollingRandomAccessFile name="RunLog"
                             fileName="target/logs/automation.log"
                             filePattern="target/logs/automation-%i.log.gz"
                             immediateFlush="true">
      <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5p %c{1} - %msg%n"/>
      <Policies>
        <SizeBasedTriggeringPolicy size="10 MB"/>
      </Policies>
      <DefaultRolloverStrategy max="10"/>
    </RollingRandomAccessFile>
  </Appenders>

  <Loggers>
  
    <Logger name="infiterra" level="DEBUG" additivity="false">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="RunLog"/>
    </Logger>

    <Root level="INFO">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="RunLog"/>
    </Root>
  </Loggers>
</Configuration>
